<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/np__game_stream_item_footer_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/np__game_stream_item_footer_height"
    android:background="@color/np__grey_super_light"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/np__game_stream_item_footer_likes_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/np__game_stream_item_footer_separator"
        android:background="@color/np__grey_super_light" >

        <ImageView
            android:id="@+id/np__game_stream_item_footer_likes_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/np__ic_gamestream_item_like_off" />

        <TextView
            android:id="@+id/np__game_stream_item_footer_likes_text"
            style="@style/NP__.GameStream.Item.Footer.Button.Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/np__game_stream_item_footer_button_side_margin"
            android:layout_toRightOf="@+id/np__game_stream_item_footer_likes_icon"
            android:text="@string/np__application_name" />
    </RelativeLayout>

    <View
        android:id="@+id/np__game_stream_item_footer_separator"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@color/np__shadow_color" />

    <RelativeLayout
        android:id="@+id/np__game_stream_item_footer_action_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/np__game_stream_item_footer_separator"
        android:background="@color/np__grey_super_light" >

        <ImageView
            android:id="@+id/np__game_stream_item_footer_action_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/np__game_stream_item_footer_button_side_margin"
            android:layout_toLeftOf="@+id/np__game_stream_item_footer_action_text"
            android:src="@drawable/np__ic_gamestream_item_challenge" />

        <TextView
            android:id="@+id/np__game_stream_item_footer_action_text"
            style="@style/NP__.GameStream.Item.Footer.Button.Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/np__application_name" />
    </RelativeLayout>

</RelativeLayout>