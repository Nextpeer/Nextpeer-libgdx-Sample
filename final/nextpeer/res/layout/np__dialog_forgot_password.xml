<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/np__credentials_forgot_password_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@color/np__transparent_background" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/np__credentials_forgot_password_action_bar_container"
                android:layout_width="match_parent"
                android:layout_height="@dimen/np__dummy_action_bar_default_height"
                android:background="@color/np__white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/np__dummy_action_bar_padding" >

                <ImageButton
                    android:id="@+id/np__credentials_forgot_password_back_button"
                    style="@style/NP__.Widget.ImageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:src="@drawable/np__ic_navigate_back" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="@dimen/np__credentials_profile_dialog_action_bar_vertical_separator"
                    android:layout_marginLeft="@dimen/np__credentials_profile_dialog_action_bar_vertical_separator_margin"
                    android:layout_marginRight="@dimen/np__credentials_profile_dialog_action_bar_vertical_separator_margin"
                    android:background="@color/np__grey_light" />

                <TextView
                    android:id="@+id/np__credentials_forgot_password_action_bar_title"
                    style="@style/NP__.Credentials.Title.Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/np__credentials_forgot_password" />
            </LinearLayout>

            <include layout="@layout/np__layout_credentials_email_form" />
        </LinearLayout>
    </FrameLayout>

</RelativeLayout>