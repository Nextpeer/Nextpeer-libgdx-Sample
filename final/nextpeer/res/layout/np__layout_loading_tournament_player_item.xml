<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/np__tournament_loading_grid_item_margin"
    android:background="@null"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <com.nextpeer.android.open.ui.NPCircularImageView
        android:id="@+id/np__loading_tournament_player_item_profile_image"
        android:layout_width="@dimen/np__tournament_loading_player_picture_radius"
        android:layout_height="@dimen/np__tournament_loading_player_picture_radius"
        android:layout_marginTop="@dimen/np__tournament_loading_vertical_margin"
        android:scaleType="centerCrop"
        android:src="@drawable/np__ic_default_player_profile"
        app:np__image_border="true"
        app:np__image_borderColor="@color/np__tournament_loading_player_picture_border_line_color"
        app:np__image_borderWidth="@dimen/np__profile_picture_border_line_size"
        app:np__image_shadow="false" />

    <!-- Player Name -->

    <TextView
        android:id="@+id/np__loading_tournament_player_item_player_name"
        style="@style/NP__.Loading.Player.Name.Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/np__tournament_loading_vertical_margin"
        android:text="@string/np__application_name" />

    <!-- Level -->
    <TextView
        android:id="@+id/np__loading_tournament_player_item_player_level"
        style="@style/NP__.Loading.Player.Level.Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/np__application_name" />

    <ImageView
        android:id="@+id/np__loading_tournament_player_item_player_country_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/np__tournament_loading_vertical_margin"
        android:scaleType="centerCrop"
        android:src="@drawable/np__ic_flag_default" />

</LinearLayout>