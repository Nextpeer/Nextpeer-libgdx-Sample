<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/np__more_list_item_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/np__more_list_item_content_height"
    android:background="@color/np__white"
    android:clickable="true"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/np__more_list_item_top_bottom_padding"
    android:paddingLeft="@dimen/np__more_list_item_left_right_padding"
    android:paddingRight="@dimen/np__more_list_item_left_right_padding"
    android:paddingTop="@dimen/np__more_list_item_top_bottom_padding" >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/np__grey_light" />

    <!--suppress UseCompoundDrawables, It's mor ecomplicated to controll the drawable layouting -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/np__more_list_item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/np__more_list_item_content_left_margin"
            android:layout_marginStart="@dimen/np__more_list_item_content_left_margin" />

        <TextView
            android:id="@+id/np__more_list_item_text"
            style="@style/NP__.More.Item.Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/np__more_list_item_content_left_margin"
            android:layout_marginStart="@dimen/np__more_list_item_content_left_margin" />
    </LinearLayout>

</RelativeLayout>