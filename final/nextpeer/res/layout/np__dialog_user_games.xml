<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/np__transparent_background" >

        <include
            android:id="@+id/np__user_games_action_bar_layout"
            layout="@layout/np__layout_dialog_action_bar" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/np__user_games_action_bar_layout"
            android:padding="@dimen/np__fragment_default_padding" >

            <ListView
                android:id="@+id/np__native_ads_list"
                style="@style/NP__.Widget.ListView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:dividerHeight="@dimen/np__games_list_divider_size" />
        </FrameLayout>
    </RelativeLayout>

</RelativeLayout>