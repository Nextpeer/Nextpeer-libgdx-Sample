<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <!-- Shadow -->
    <item >
        <shape android:shape="oval">
            <!-- set the shadow color here -->
            <stroke
                android:width="@dimen/np__widget_button_shadow_size"
                android:color="@color/np__shadow_color" />
            <!-- setting the thickness of shadow (positive value will give shadow on that side) -->
            <padding
                android:bottom="@dimen/np__widget_button_shadow_seen_padding"
                android:right="@dimen/np__widget_button_shadow_seen_padding"
                 />
        </shape>
    </item>

    	<!-- stroke -->
    <item android:id="@+id/np__button_border_color">
        <shape android:shape="oval">
            <stroke android:width="1dp"/>
        </shape>
    </item>
    
    <!-- Background -->
     <item android:id="@+id/np__button_color">
        <shape android:shape="oval">
            <solid android:color="@color/np__white" />
        </shape>
    </item>

</layer-list>