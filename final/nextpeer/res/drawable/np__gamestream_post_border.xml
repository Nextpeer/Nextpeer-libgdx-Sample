<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <item>
        <shape>

            <!-- set the shadow color here -->
            <stroke
                android:width="@dimen/np__game_stream_post_shadow_seen_size"
                android:color="@color/np__shadow_color" />
            <!-- setting the thickness of shadow (positive value will give shadow on that side) -->
            <padding
                android:bottom="@dimen/np__game_stream_post_shadow_seen_size"
                android:left="@dimen/np__game_stream_post_shadow_unseen_size"
                android:right="@dimen/np__game_stream_post_shadow_seen_size"
                android:top="@dimen/np__game_stream_post_shadow_unseen_size" />
        </shape>
    </item>
    <!-- Background -->
    <item>
        <shape>
            <solid android:color="@color/np__white" />
        </shape>
    </item>

</layer-list>