<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >
	
	<!-- stroke -->
    <item>
        <shape>
            <stroke
                android:width="10dp"
                android:color="@color/np__palette_dark_blue" />

            <padding
                android:bottom="@dimen/np__report_player_button_stroke_width"
                android:left="@dimen/np__report_player_button_stroke_width"
                android:right="@dimen/np__report_player_button_stroke_width"
                android:top="@dimen/np__report_player_button_stroke_width" />
            
        </shape>
    </item>
    <!-- Background -->
    <item>
        <shape>
            <solid android:color="@color/np__report_player_button_background_color" />
        </shape>
    </item>

</layer-list>