    <!-- Ignore the ContentDescription issue in the layouts -->
    <issue id="ContentDescription">
        <ignore path="res/layout/" />
    </issue>
    
    <!-- Ignore the Overdraw issue since we use dynamic background -->
    <issue id="Overdraw">
        <ignore path="res/layout/" />
    </issue>
    
    <!-- Ignore the UselessParent issue since we use dynamic background and we need two layers - for the background image and the transparent layer-->
    <issue id="UselessParent">
