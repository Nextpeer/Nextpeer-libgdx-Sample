<lint>
    
    <!-- Ignore the NewApi issue in the nineoldandroids files -->
    <issue id="NewApi">
        <ignore path="src/com/nineoldandroids/" />
    </issue>
    
    <!-- Ignore the InlinedApi issue in the nineoldandroids files -->
    <issue id="InlinedApi">
        <ignore path="src/com/nineoldandroids/" />
    </issue>
    
    <!-- Ignore the UnusedResources issue in the flags (which used dynamicly) and image which currently not in use but will be in the future -->
