<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/np__loading_sync_lengthy_wait_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/np__loading_sync_lengthy_wait_clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/np__ic_loding_clock" />

    <TextView
        android:id="@+id/np__loading_sync_lengthy_wait_message"
        style="@style/NP__.Loading.Title.Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/np__loading_sync_lengthy_wait_clock"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/np__tournament_loading_lengthy_wait_message_top_margin"
        android:layout_marginLeft="@dimen/np__tournament_loading_lengthy_wait_button_margin"
        android:layout_marginRight="@dimen/np__tournament_loading_lengthy_wait_button_margin"
        android:layout_marginBottom="@dimen/np__tournament_loading_lengthy_wait_message_bottom_margin"
        android:gravity="center"
        android:text="@string/np__application_name" />

    <LinearLayout
        android:id="@+id/np__loading_sync_lengthy_wait_buttons_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/np__loading_sync_lengthy_wait_message"
        android:layout_centerHorizontal="true" >

        <com.nextpeer.android.open.ui.NPButton
            android:id="@+id/np__loading_sync_lengthy_wait_cancel_button"
            style="@style/NP__.Widget.Button"
            android:layout_width="0dp"
            android:layout_height="@dimen/np__widget_button_height"
        	android:layout_marginLeft="@dimen/np__tournament_loading_lengthy_wait_button_margin"
            android:layout_weight="1"
            android:text="@string/np__application_name"
            android:textColor="@color/np__black"
            app:np__button_color="@color/np__white" />

        <com.nextpeer.android.open.ui.NPButton
            android:id="@+id/np__loading_sync_lengthy_wait_continue_button"
            style="@style/NP__.Widget.Button"
            android:layout_width="0dp"
            android:layout_height="@dimen/np__widget_button_height"
        	android:layout_marginLeft="@dimen/np__tournament_loading_lengthy_wait_button_margin"
       		android:layout_marginRight="@dimen/np__tournament_loading_lengthy_wait_button_margin"
            android:layout_weight="2"
            android:text="@string/np__application_name"
            app:np__button_color="@color/np__palette_red" />
    </LinearLayout>

</RelativeLayout>