<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="360" >

    <shape
        android:innerRadiusRatio="3"
        android:shape="ring"
        android:thicknessRatio="8"
        android:useLevel="false" >
        <gradient
            android:centerColor="@color/np__game_stream_load_more_progress_center_color"
            android:centerY="0.50"
            android:endColor="@color/np__game_stream_load_more_background"
            android:startColor="@color/np__game_stream_load_more_progress_start_color"
            android:type="sweep"
            android:useLevel="false" />
    </shape>

</rotate>