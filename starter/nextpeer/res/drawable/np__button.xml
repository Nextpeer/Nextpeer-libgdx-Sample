<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <item android:id="@+id/np__button_shadow">
        <shape>
            <!-- set the shadow color here -->
            <stroke
                android:width="@dimen/np__widget_button_shadow_size"
                android:color="@color/np__shadow_color" />
            <!-- setting the thickness of shadow (positive value will give shadow on that side) -->
            <padding
                android:bottom="@dimen/np__widget_button_shadow_seen_padding"
                android:right="@dimen/np__widget_button_shadow_seen_padding"/>

            <corners
                android:bottomLeftRadius="@dimen/np__widget_button_rounded_corners_radius"
                android:bottomRightRadius="@dimen/np__widget_button_rounded_corners_radius"
                android:topLeftRadius="@dimen/np__widget_button_rounded_corners_radius"
                android:topRightRadius="@dimen/np__widget_button_rounded_corners_radius" />
        </shape>
    </item>
    
	<!-- stroke -->
    <item android:id="@+id/np__button_border_color">
        <shape>
            <stroke
                android:width="@dimen/np__widget_button_border_width"/>

            <padding
                android:bottom="@dimen/np__widget_button_border_width"
                android:left="@dimen/np__widget_button_border_width"
                android:right="@dimen/np__widget_button_border_width"
                android:top="@dimen/np__widget_button_border_width" />
            
           <corners
                android:bottomLeftRadius="@dimen/np__widget_button_rounded_corners_radius"
                android:bottomRightRadius="@dimen/np__widget_button_rounded_corners_radius"
                android:topLeftRadius="@dimen/np__widget_button_rounded_corners_radius"
                android:topRightRadius="@dimen/np__widget_button_rounded_corners_radius" />
            
        </shape>
    </item>
    
    <!-- Background -->
     <item android:id="@+id/np__button_color">
        <shape>
            <solid android:color="@color/np__white" />

            <corners
                android:bottomLeftRadius="@dimen/np__widget_button_rounded_corners_radius"
                android:bottomRightRadius="@dimen/np__widget_button_rounded_corners_radius"
                android:topLeftRadius="@dimen/np__widget_button_rounded_corners_radius"
                android:topRightRadius="@dimen/np__widget_button_rounded_corners_radius" />
        </shape>
    </item>

</layer-list>