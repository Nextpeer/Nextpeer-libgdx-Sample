<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
    <item>
        <shape>
            <!-- set the shadow color here -->
            <stroke
                android:width="@dimen/np__game_stream_new_stories_shadow_size"
                android:color="@color/np__shadow_color" />
            <!-- setting the thickness of shadow (positive value will give shadow on that side) -->
            <padding
                android:bottom="@dimen/np__game_stream_new_stories_shadow_seen_padding"
                android:right="@dimen/np__game_stream_new_stories_shadow_seen_padding"/>

            <corners
                android:bottomLeftRadius="@dimen/np__game_stream_new_stories_corners_radius"
                android:bottomRightRadius="@dimen/np__game_stream_new_stories_corners_radius"
                android:topLeftRadius="@dimen/np__game_stream_new_stories_corners_radius"
                android:topRightRadius="@dimen/np__game_stream_new_stories_corners_radius" />
        </shape>
    </item>
    
    <!-- Background -->
    <item>
        <shape>
            <solid android:color="@color/np__grey_super_light" />

            <corners
                android:bottomLeftRadius="@dimen/np__game_stream_new_stories_corners_radius"
                android:bottomRightRadius="@dimen/np__game_stream_new_stories_corners_radius"
                android:topLeftRadius="@dimen/np__game_stream_new_stories_corners_radius"
                android:topRightRadius="@dimen/np__game_stream_new_stories_corners_radius" />
        </shape>
    </item>

</layer-list>