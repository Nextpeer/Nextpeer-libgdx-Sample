<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!--
    	========================================================
    	Widgets.
    	======================================================== 
    -->
    
    <style name="NP__.Widget.Button" parent="@android:style/Widget.Button">
        <item name="android:textAppearance">@style/NP__.TextAppearance.Medium</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="NP__.Widget.Dialog.ActionBar.Title.Text" parent="NP__.Widget.Text.Content.Large">
        <item name="android:textColor">@color/np__palette_dark_blue</item>
		<item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!--
    	========================================================
    	Game Stream.
    	======================================================== 
    -->

    <style name="NP__.GameStream.Header.Text" parent="NP__.Widget.Text.Content.Medium">
        <item name="android:textColor">@color/np__game_stream_post_title</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="NP__.GameStream.Item.Header.Text" parent="NP__.Widget.Text.Content.Small">
        <item name="android:textColor">@color/np__game_stream_post_title</item> 
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="NP__.GameStream.Item.Header.StoryTime" parent="NP__.TextAppearance.Small">
        <item name="android:textColor">@color/np__game_stream_post_timestamp_text</item>
        <item name="android:textSize">11sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="NP__.GameStream.Item.Story.Text" parent="NP__.TextAppearance.Medium">
        <item name="android:textColor">@color/np__palette_dark_blue</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="NP__.GameStream.Item.Footer.Button.Text" parent="NP__.TextAppearance.Small">
        <item name="android:textColor">@color/np__game_stream_post_like_counter</item>
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <style name="NP__.GameStream.Post.Text" parent="NP__.TextAppearance.Large">
        <item name="android:textColor">@color/np__palette_dark_blue</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:inputType">textMultiLine|textNoSuggestions</item>
        <item name="android:cursorVisible">false</item>
    </style>
    
    <style name="NP__.GameStream.NewStories.Text" parent="NP__.TextAppearance.Small">
        <item name="android:textColor">@color/np__palette_dark_blue</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
