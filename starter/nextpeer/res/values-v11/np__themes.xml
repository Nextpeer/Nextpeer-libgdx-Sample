<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
        Base application theme for API 11+. This theme completely replaces
        AppBaseTheme from res/values/styles.xml on API 11+ devices.
    -->
    <style name="NP__BaseTheme" parent="android:Theme.Holo.Light">
        <!-- API 11 theme customizations can go here. -->
        <!-- <item name="android:windowActionBar">false</item> -->
        
        <item name="android:actionBarStyle">@style/NP__.Widget.ActionBar</item>
        <item name="android:windowContentOverlay">@null</item>
        
    </style>

    <!-- Application theme. -->
    <style name="NP__Theme" parent="NP__BaseTheme">
        <item name="android:textAppearanceLarge">@style/NP__.TextAppearance.Large</item>
        <item name="android:textAppearanceMedium">@style/NP__.TextAppearance.Medium</item>
        <item name="android:textAppearanceSmall">@style/NP__.TextAppearance.Small</item>
        <item name="android:dropDownListViewStyle">@style/NP__Theme.DropDownBase</item>
        <item name="android:homeAsUpIndicator">@drawable/np__action_bar_back_navigation_icon_padding</item>
    </style>

</resources>