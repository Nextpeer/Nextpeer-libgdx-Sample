    <style name="NP__.Base.Widget.Button" parent="@android:style/Widget.Button">
        <item name="android:textAppearance">@style/NP__.TextAppearance.Medium</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="NP__.Base.Widget.Dialog.ActionBar.Title.Text" parent="NP__.Widget.Text.Content.Large">
        <item name="android:textColor">@color/np__palette_dark_blue</item>
		<item name="android:textSize">20sp</item>
		<item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>
    

